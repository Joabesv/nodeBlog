<%- include ('../../includes/head.ejs') %> 
<%- include ('../../includes/navHome.ejs') %> 

<div class="container">
  <hr />
    <% result.articles.rows.forEach(result => { %>
    <div class="card">
      <div class="card-header">
        <h2><%= result.title %> </h2>
      </div>
      <div class="card-body">
        <a class="btn btn-success" href="/<%=result.slug%>">Ler artigo</a>
      </div>
    </div>
    <br />
  <% }) %>

  <div class="row">
    <div class="col col-12">

      <% if (result.page > 2) { %>
        <a style="float:left;" href="/articles/page/<%= result.page - 1 %> ">
          Previous
          <hr />
        </a>  
      <% } else if (result.page == 2) {%>
        <a style="float:left;" href="/">
          Previous
          <hr />
        </a>        
        <% } %> 
      
           
      <% if (result.next) { %>
        <a style="float:right;" href="/articles/page/<%= result.page + 1 %> ">
          Next
          <hr />
        </a>
      <% } %>
    </div>
    <hr />
  </div>

</div>

<%- include ('../../includes/footer.ejs') %>